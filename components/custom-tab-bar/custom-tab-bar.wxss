/* components/custom-tab-bar/custom-tab-bar.wxss */
.tab-bar{
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 48px;
  background: #FAFBFD;
  opacity: 0.93;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-border{
  background-color: #E6E7E8;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item{
  flex: 1;
  text-align: center;
  justify-content: center;
  align-items: center;
  display: flex;
  flex-direction: column;
}

.tab-bar-item cover-image {
  width: 27px;
  height: 29px;
}

.tab-bar-item cover-view {
  font-size: 10px;
} 